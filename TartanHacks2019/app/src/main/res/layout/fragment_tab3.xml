<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/tab3"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/tvArtist"
        android:layout_marginBottom="5dp"
        android:textSize="15dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvArtist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/pausePlay"
        android:layout_marginBottom="10dp"
        android:textSize="10dp"
        android:text="TextView" />

    <Button
        android:id="@+id/pausePlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:text="Pause / Play" />

    <TextView
        android:id="@+id/tvMainTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="30dp"
        android:text="Choose Mood" />

    <ImageView
        android:id="@+id/ivPlaylist2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@id/tvMainTitle"
        android:layout_marginTop="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:clickable="true"
        app:srcCompat="@drawable/playlist2" />

    <ImageView
        android:id="@+id/ivPlaylist4"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@id/ivPlaylist2"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:clickable="true"
        app:srcCompat="@drawable/playlist4" />

    <ImageView
        android:id="@+id/ivPlaylist1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@id/tvMainTitle"
        android:layout_marginTop="30dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"
        android:clickable="true"
        app:srcCompat="@drawable/playlist1" />

    <ImageView
        android:id="@+id/ivPlaylist3"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@id/ivPlaylist1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:clickable="true"
        app:srcCompat="@drawable/playlist3" />

    <ImageView
        android:id="@+id/ivPlaylist5"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@id/ivPlaylist3"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"
        android:clickable="true"
        app:srcCompat="@drawable/playlist5" />

    <ImageView
        android:id="@+id/ivPlaylist6"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@id/ivPlaylist4"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:clickable="true"
        app:srcCompat="@drawable/playlist6" />



</RelativeLayout>